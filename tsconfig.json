{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./src/calculator/types"]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "temp"]
}
