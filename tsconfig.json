{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*", "tests/**/*", "types/**/*", "data/**/*"],
  "exclude": ["node_modules", "temp"]
}
